<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="3dp"
    android:backgroundTint="@color/button"
    android:id="@+id/notificationCard">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_marginBottom="2dp"
        android:background="@color/white">

       <!-- <ImageView
            android:id="@+id/projectImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:src="@drawable/info_toast">
        </ImageView>-->

        <TextView
            android:id="@+id/notificationTitle"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:text="Notification Title"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp">
        </TextView>

        <TextView
            android:id="@+id/notificationDescription"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/notificationTitle"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="18dp"
            android:text="Notification Description"
            android:textColor="@color/black"
            android:textSize="15sp"></TextView>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end|top"
        android:background="@drawable/white_circle_drawable_black_border"
        android:src="@android:drawable/ic_delete"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"></androidx.appcompat.widget.AppCompatImageView>
</androidx.cardview.widget.CardView>