<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/reward_list_child"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <!-- for below textview, we can use blue color hex value 99DDFF (as in Help Fragment) to highlight month-->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MONTH/QUARTER/YEAR"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"
                android:background="#dddddd"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvLifeTimeTitle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Total Lifetime Points Earned:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="15dp"></TextView>
            <TextView
                android:id="@+id/tvLifeTimeEarned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="#008000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="30dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvRedeemableTitle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Total Redeemable Points Earned:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="15dp"></TextView>

            <TextView
                android:id="@+id/tvRedeemableEarned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="1000"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvRedeemedTitle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Points Redeemed:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="15dp"></TextView>
            <TextView
                android:id="@+id/tvRedeemableRedeemed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="30dp"></TextView>
        </LinearLayout>
</LinearLayout>